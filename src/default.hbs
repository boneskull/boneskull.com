<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>{{meta_title}}</title>
  <meta http-equiv="Content-Type" content="application/xhtml+xml">
  <meta name="HandheldFriendly" content="True" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
  {{> 'styles' }}
  {{ghost_head}}
</head>

<body class="{{body_class}}">
  <div class="wrapper-site">
    <header>
      <div class="branding">
        {{#if @blog.logo}}
        <a class="blog-logo" href="{{@blog.url}}">
          <img src="{{@blog.logo}}" alt="Blog Logo" />
        </a>
        {{else}}
        <h1>
          <a class="blog-title" href="{{@blog.url}}">{{@blog.title}}</a>
        </h1>
        {{/if}}
      </div>

      <div class="menu-navigation-desktop">
        {{navigation}}
      </div>

      <div class="menu-navigation">
        <button class="hamburger hamburger--slider" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>
        <div class="menu">
          <span class="title-menu">Menu</span>{{navigation}}</div>
      </div>

    </header>

    {{! Slider }} {{#is "home"}} {{#get "posts" limit="5" filter="featured:true" include="tags"}}
    <div class="featured-slider">
      {{#foreach posts}}
      <div class="featured-image-wrapper">
        <a href="{{url}}">
          <img src="{{img_url feature_image}}" title="{{title}}">
        </a>
        <div class="mask"></div>
        <div class="featured-image-content">
          <h1>
            <a href="{{url}}">{{title}}</a>
          </h1>
        </div>
      </div>

      {{/foreach}}
    </div>
    {{/get}} {{/is}} {{! Everything else gets inserted here }} {{{body}}}
    <footer>
      {{> 'footer' }}
    </footer>
  </div>
  {{> 'scripts' }}
  {{ghost_foot}}
</body>

</html>